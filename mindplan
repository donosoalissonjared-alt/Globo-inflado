```javascript
import React, { useState } from 'react';
import { 
  View, 
  Text, 
  TouchableOpacity, 
  StyleSheet, 
  ScrollView,
  TextInput,
  Button
} from 'react-native';

const MindPlanApp = () => {
  const [activeTab, setActiveTab] = useState('rotina');
  const [emocao, setEmocao] = useState('');
  const [sugestoes, setSugestoes] = useState([]);
  const [tarefas, setTarefas] = useState([
    { id: 1, tarefa: 'Lavar lou√ßa', responsavel: 'Jo√£o', concluida: false },
    { id: 2, tarefa: 'Limpar quarto', responsavel: 'Maria', concluida: true },
    { id: 3, tarefa: 'Compras', responsavel: 'Pedro', concluida: false }
  ]);

  // Fun√ß√£o para gerar rotina autom√°tica
  const gerarRotina = () => {
    alert('Rotina inteligente gerada!');
  };

  // Fun√ß√£o para an√°lise emocional
  const analisarEmocao = (emocaoSelecionada) => {
    const sugestoesMap = {
      'üòä Feliz': ['Continue assim!', 'Compartilhe sua energia positiva'],
      'üò¢ Triste': ['Pausa para m√∫sica relaxante', 'Respira√ß√£o profunda', 'Ch√° quente'],
      'üò∞ Ansioso': ['Exerc√≠cio de respira√ß√£o 4-7-8', 'Medita√ß√£o guiada 5min'],
      'üò¥ Cansado': ['Pausa de 15min', 'Alongamento r√°pido', 'Hidrata√ß√£o'],
      'üò§ Estressado': ['Pausa imediata', 'Caminhada de 5min', '√Ågua gelada no rosto']
    };
    setEmocao(emocaoSelecionada);
    setSugestoes(sugestoesMap[emocaoSelecionada] || []);
  };

  // Componente de Rotina Inteligente
  const RotinaInteligente = () => (
    <View style={styles.screen}>
      <Text style={styles.title}>üìÖ Rotina Inteligente</Text>
      
      <View style={styles.agenda}>
        <TimeBlock hora="07:00" atividade="Medita√ß√£o" tipo="descanso" />
        <TimeBlock hora="08:00" atividade="Caf√© da Manh√£" tipo="alimentacao" />
        <TimeBlock hora="09:00" atividade="Estudo/ Trabalho" tipo="estudo" />
        <TimeBlock hora="12:00" atividade="Almo√ßo" tipo="pausa" />
        <TimeBlock hora="14:00" atividade="Trabalho Foco" tipo="trabalho" />
        <TimeBlock hora="16:00" atividade="Pausa Ativa" tipo="descanso" />
        <TimeBlock hora="18:00" atividade="Treino" tipo="exercicio" />
        <TimeBlock hora="20:00" atividade="Jantar" tipo="alimentacao" />
        <TimeBlock hora="22:00" atividade="Relaxar" tipo="descanso" />
      </View>
      
      <TouchableOpacity style={styles.botao} onPress={gerarRotina}>
        <Text style={styles.botaoTexto}>üîÑ Gerar Rotina Autom√°tica</Text>
      </TouchableOpacity>
    </View>
  );

  // Componente de bloco de tempo
  const TimeBlock = ({ hora, atividade, tipo }) => (
    <View style={[styles.timeBlock, styles[tipo]]}>
      <Text style={styles.hora}>{hora}</Text>
      <Text style={styles.atividade}>{atividade}</Text>
    </View>
  );

  // Componente Emocional
  const LembretesEmocionais = () => {
    const emocoes = ['üòä Feliz', 'üò¢ Triste', 'üò∞ Ansioso', 'üò¥ Cansado', 'üò§ Estressado'];

    return (
      <View style={styles.screen}>
        <Text style={styles.title}>üòä Como voc√™ est√° se sentindo?</Text>
        
        <ScrollView>
          {emocoes.map(emo => (
            <TouchableOpacity 
              key={emo} 
              style={[
                styles.emocaoItem, 
                emocao === emo && styles.emocaoSelecionada
              ]}
              onPress={() => analisarEmocao(emo)}
            >
              <Text style={styles.emocaoTexto}>{emo}</Text>
            </TouchableOpacity>
          ))}
          
          {sugestoes.length > 0 && (
            <View style={styles.sugestoesContainer}>
              <Text style={styles.sugestoesTitulo}>Sugest√µes para voc√™:</Text>
              {sugestoes.map((sug, index) => (
                <Text key={index} style={styles.sugestao}>üí° {sug}</Text>
              ))}
            </View>
          )}
        </ScrollView>
      </View>
    );
  };

  // Componente de Tarefas Dom√©sticas
  const OrganizadorTarefas = () => {
    const toggleTarefa = (id) => {
      setTarefas(tarefas.map(tarefa => 
        tarefa.id === id 
          ? { ...tarefa, concluida: !tarefa.concluida } 
          : tarefa
      ));
    };

    return (
      <View style={styles.screen}>
        <Text style={styles.title}>üè† Tarefas Dom√©sticas</Text>
        
        <ScrollView>
          {tarefas.map(item => (
            <View key={item.id} style={styles.tarefaItem}>
              <View style={styles.tarefaInfo}>
